<%= form_for([@transaction, @sub_transaction]) do |f| %>
  <% if @sub_transaction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sub_transaction.errors.count, "error") %> prohibited this sub_transaction from being saved:</h2>

      <ul>
      <% @sub_transaction.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    Transaction: <%= link_to @transaction.description, transaction_path(id: @transaction.id) %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br>
    <%= f.select :category_id, Category.all_categories %>
  </div>
  <div class="field">
    <%= f.label :amount_cents %><br>
    <%= f.text_field :amount_cents %>
  </div>
  <div class="field">
    <%= f.label :amount_currency %><br>
    <%= f.select :amount_currency, all_currencies %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
