<%= javascript_include_tag 'categories' %>

<p id="notice"><%= notice %></p>

<h1>Listing Categories</h1>

<%= pie_chart @decorator.income_data, prefix: '$' %>
<%= pie_chart @decorator.expense_data, prefix: '$'%>

<table class='transaction-list'>
  <thead>
    <tr>
      <th>Category type</th>
      <th>Name</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @decorator.all_categories.each do |category| %>
      <tr class='<%= category.category_type %>'>
        <td><%= category.category_type %></td>
        <td><%= category.name %></td>
        <td><%= category.total.format %></td>
        <td><%= link_to 'Show', category_path(id: category.id) %></td>
        <td><%= link_to 'Edit', edit_category_path(id: category.id) %></td>
        <td><%= link_to 'Destroy', category_path(id: category.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path %>
