<p id="notice"><%= notice %></p>

<p>
  <strong>Category:</strong>
  <%= @transaction.category.name %>
</p>

<p>
  <strong>Account:</strong>
  <%= @transaction.account.name %>
</p>

<p>
  <strong>Amount:</strong>
  <%= @transaction.amount.format %>
</p>

<p>
  <strong>Paid at:</strong>
  <%= @transaction.paid_at %>
</p>

<p>
  <strong>Description:</strong>
  <%= @transaction.description %>
</p>

<%= link_to 'Edit', edit_transaction_path(@transaction) %> |
<%= link_to 'Back', transactions_path %>

<h2>Listing Sub Transactions</h2>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Amount</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sub_transactions.each do |sub_transaction| %>
      <tr>
        <td><%= sub_transaction.description %></td>
        <td><%= sub_transaction.amount.format %></td>
        <td><%= sub_transaction.category.name %></td>
        <td><%= link_to 'Edit', edit_transaction_sub_transaction_path(23, sub_transaction) %></td>
        <td><%= link_to 'Destroy', transaction_sub_transaction_path(23, sub_transaction), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sub transaction', new_transaction_sub_transaction_path(23) %>
